{
  "name": "adp",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "dev:frontend": "turbo dev --filter=@adp/frontend",
    "dev:backend": "turbo dev --filter=@adp/backend",
    "build:frontend": "turbo build --filter=@adp/frontend",
    "build:backend": "turbo build --filter=@adp/backend"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5"
  }
}
